modules = ["nodejs-20", "python-3.11", "python3"]

[workflows]
runButton = "Start Development"

[[workflows.workflow]]
name = "Dev Server"
author = 40535106
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Server"
author = 40556587
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Clean Server"
author = 41145892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Node Server"
author = 41145892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3000 npm run dev"

[[workflows.workflow]]
name = "Start Python App"
author = 41145892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Start Web App"
author = 41145892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev"

[[workflows.workflow]]
name = "Restart Web App"
author = 41145892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Initialize Database"
author = 41176210
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx scripts/setup-db.ts"

[[workflows.workflow]]
name = "Start Development"
author = 42538382
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev"

[[workflows.workflow]]
name = "Build and Deploy"
author = 43545933
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build && cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:push"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production PORT=5000 npm start"

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "NODE_ENV=production PORT=5000 npm start"]
build = ["sh", "-c", "./build.sh"]
